@model IEnumerable<Sommelier.Models.Food>

@{
    ViewData["Title"] = "Index";
}

<a class="waves-effect waves-light btn-small back-button" href='javascript:history.go(-1)'><i class="material-icons left">keyboard_backspace</i>Back</a>

<h2>What are you having for dinner this evening?</h2>

<div class="row">
@foreach (var item in Model)
{
    <a asp-action="Details" asp-route-id="@item.FoodId">
    <div class="col s6 ">
      <div class="card hoverable">
        <div class="card-image">
          <img src="">
        </div>
        <div class="card-content">
            <p> @Html.DisplayFor(modelItem => item.Name)</p>
        </div>
      </div>
           
    </div>
    </a>
}
</div>