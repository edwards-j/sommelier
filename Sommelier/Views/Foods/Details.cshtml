@model Sommelier.Models.ViewModels.FoodPairingViewModel

@{
    ViewData["Title"] = "Details";
}

<div>
    <div>
        <h3>
            Since you're eating @Model.Food.Name, I'd recommend one of these from your cellar
        </h3>
    </div>
    <div>
        @foreach (var wine in Model.Wines)
        {
            if (wine.Quantity > 0)
            {
        <a asp-controller="Wines" asp-action="RemoveBottleConfirm" asp-route-id="@wine.WineId">
            <div class="row ">
                <div class="col s12 m6">
                    <div class="card blue-grey darken-1 hoverable">
                        <div class="card-content white-text">
                            <span class="card-title">@wine.Winery.Name @wine.Variety.Name - @wine.Year</span>
                            @if (wine.Name == null)
                            {
                                <p>Bottles in your cellar: @wine.Quantity</p>
                            }
                            @if (wine.Name != null)
                            {
                                <p>Wine Name: @wine.Name</p>
                                <p>Bottles in your cellar: @wine.Quantity</p>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </a>
            }
        }
        </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>