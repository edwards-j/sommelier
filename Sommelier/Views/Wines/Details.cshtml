@model Sommelier.Models.ViewModels.WineDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Wine</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Wine.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Wine.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Wine.WineryId)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Wine.Winery.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Wine.VarietyId)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Wine.Variety.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Wine.Year)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Wine.Year)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Wine.Favorite)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Wine.Favorite)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Wine.Quantity)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Wine.Quantity)
        </dd>
    </dl>
</div>
<div>
    <p>This wine pairs best with:</p>
    <ul>
        @foreach (var food in Model.Foods)
        {
            <li>@food.Name</li>
        }
    </ul>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Wine.WineId">Edit</a> |
    <a asp-action="Delete" asp-route-id="@Model.Wine.WineId">Delete</a> |
    <a asp-action="Index">Back to List</a>
</div>