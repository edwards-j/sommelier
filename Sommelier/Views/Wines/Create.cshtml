@model Sommelier.Models.ViewModels.CreateWineViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Wine</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateWinery">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Add a new winery</label>
                <input asp-for="Winery.Name" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-default" />
            </div>
        </form>
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="Wine.WineryId" class="control-label">or select an existing winery</label>
                <select asp-for="Wine.WineryId" class="form-control" asp-items="@Model.Wineries"></select>
                <span asp-validation-for="Wine.WineryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Wine.Name" class="control-label">Wine Name (if applicable)</label>
                <input asp-for="Wine.Name" class="form-control" />
                <span asp-validation-for="Wine.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Wine.VarietyId" class="control-label">Select a variety</label>
                <select asp-for="Wine.VarietyId" class="form-control" asp-items="@Model.Varieties"></select>
                <span asp-validation-for="Wine.VarietyId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Wine.Year" class="control-label"></label>
                <input asp-for="Wine.Year" class="form-control" />
                <span asp-validation-for="Wine.Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Wine.Quantity" class="control-label"></label>
                <input asp-for="Wine.Quantity" class="form-control" />
                <span asp-validation-for="Wine.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts
    {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}