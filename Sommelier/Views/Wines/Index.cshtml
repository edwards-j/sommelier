@model IEnumerable<Sommelier.Models.Wine>

@{
    ViewData["Title"] = "Index";
}

<h2>My Cellar</h2>

@if (Model.Count() > 1)
{
    <h4>In your cellar, you currently have @Model.Count() bottles</h4>
}
else if (Model.Count() == 1)
{
    <h4>In your cellar, you currently have @Model.Count() bottle</h4>
}
else if (Model.Count() == 0)
{
    <h4>You don't have any wines in your cellar. Let's change that</h4>
}

<p>
    <a asp-action="Create">Add New Wine</a>
</p>

@foreach (var item in Model)
{
    <a asp-action="Details" asp-route-id="@item.WineId">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">@item.Winery.Name @item.Variety.Name - @item.Year</h3>
            </div>
            @if (item.Name == null)
            {
                <div class="panel-body">
                    <p>Bottles in your cellar: @item.Quantity</p>
                </div>
            }
            @if (item.Name != null)
            {
                <div class="panel-body">
                    <p>Wine Name: @item.Name</p>
                    <p>Bottles in your cellar: @item.Quantity</p>
                </div>
            }
        </div>
    </a>
}