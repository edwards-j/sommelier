@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="login-wrapper">
    <div class="row container">
        <img class="col s12 login-logo" src="~/images/LoginLogo.svg" />
    </div>

    <h5 class="container">Please Log in</h5>
    <div class="row container">
        <div class="col-md-4">
            <section>
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="input-field">
                        <label for="long_email" asp-for="Input.Email"></label>
                        <input id="login_email" asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="input-field">
                        <label for="login_pw" asp-for="Input.Password"></label>
                        <input id="login_pw" asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe">
                                <input type="checkbox" asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <button id="login-button" type="submit" class="waves-effect waves-light btn">Log in</button>
                    </div>
                    <div class="form-group">
                        <p>
                            <a asp-page="./ForgotPassword">Forgot your password?</a>
                        </p>
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                        </p>
                    </div>
                </form>
            </section>
        </div>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
